<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/actionItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/double_padding"
    android:paddingBottom="@dimen/double_padding"
    android:paddingLeft="@dimen/double_padding"
    android:paddingRight="@dimen/double_padding"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/actionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do the thing"
        android:textColor="@android:color/black"/>

    <include layout="@layout/spacer"/>

    <TextView
        android:id="@+id/pointsValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+12"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="@dimen/default_padding"/>

    <ImageView
        android:id="@+id/pointsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/baseline_add_circle_white_18"
        android:backgroundTint="@android:color/black"
        />

</LinearLayout>